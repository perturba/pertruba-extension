{
  "manifest_version": 3,
  "name": "Perturba - 이미지 방어막",
  "version": "1.1.0",
  "description": "인스타그램/트위터 업로드 전 이미지를 변환하여 얼굴을 보호합니다.",
  "permissions": [
    "activeTab",
    "scripting",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "https://woojangpark.site/*",
    "https://api.woojangpark.site/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*",
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
